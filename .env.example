# Application Configuration
APP_NAME=PROTOCOL:LOOP
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./protocol_loop.db
# DATABASE_URL=postgresql://user:password@localhost/protocol_loop

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-pro

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
MAX_TOKENS=2000
TEMPERATURE=0.7

# Loop Configuration
LOOP_DURATION_SECONDS=300
MAX_LOOPS_PER_SESSION=50
MEMORY_RETENTION_LIMIT=100

# ML Model Paths
EMOTION_MODEL_PATH=models/emotion_classifier
DECISION_TREE_PATH=models/decision_tree.pkl
MARKOV_CHAIN_PATH=models/markov_chain.pkl

# Frontend Configuration
STATIC_FILES_DIR=frontend/static
TEMPLATES_DIR=frontend/templates

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/protocol_loop.log

# Redis (for production scaling)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Social Features
ENABLE_SOCIAL_FEATURES=True
MAX_GHOST_PROTOCOLS=10

# Analytics
ENABLE_ANALYTICS=True
ANALYTICS_DB=analytics.db
